{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/src/index.js"
        }
    ],
    "functions": {
        "src/index.js": {
            "runtime": "nodejs18.x",
            "maxDuration": 30
        }
    },
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}